<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView



        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".fragment.PrenotaFragment">


            <LinearLayout
                android:id="@+id/layoutRecyclerViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerTipoCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textViewPrezzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_nome"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="@string/hint_nome"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewCognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_cognome"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextCognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="@string/hint_cognome"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewNumeroCarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_numero_carta"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextNumeroCarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:minHeight="48dp"
                android:hint="@string/hint_numero_carta"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewCvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_cvv"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextCvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:minHeight="48dp"
                android:hint="@string/hint_cvv"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_data_check_in"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextDataCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none"
                android:minHeight="48dp"
                android:onClick="onDataCheckInClicked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_data_check_out"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextDataCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none"
                android:minHeight="48dp"
                android:onClick="onDataCheckOutClicked" />

            <Button
                android:id="@+id/buttonFatturazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_fatturazione"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonConferma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_conferma"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</layout>
